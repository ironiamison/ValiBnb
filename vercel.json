{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "src/index.js"
    },
    {
      "src": "/supported",
      "dest": "src/index.js"
    },
    {
      "src": "/verify",
      "dest": "src/index.js"
    },
    {
      "src": "/settle",
      "dest": "src/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NETWORK": "mainnet",
    "BSC_RPC_URL": "https://bsc-dataseed1.binance.org"
  }
}

